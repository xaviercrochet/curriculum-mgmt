                  .panel-heading
                    .text-center
                      %a{"data-parent" => "#accordion", "data-toggle" => "collapse", :href => "#collapseTree"}
                        Prérequis disjonctifs (OR)
                  #collapseTree.panel-collapse.collapse
                    .panel-body
                      = render 'constraints', constraints: @course.constraints.o_r.prerequisites
