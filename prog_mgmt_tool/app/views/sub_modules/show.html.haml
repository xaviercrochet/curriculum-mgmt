- @sub_module.properties.each do |p|
	%p
		%strong
			= p.p_type + ":"
		= p.value

- if @sub_module.has_courses?
	= link_to 'Courses', sub_module_courses_path(@sub_module)
- if @sub_module.sub_modules > 0
  = link_to 'SubModule', p_module_sub_modules_path(@sub_module)
= link_to 'Back', p_module_sub_modules_path(@p_module)