.col-md-8.col-md-offset-2
  .panel.panel-default
    .panel-heading
      .text-center
        = @program.name
    .panel-heading.text-center
      = link_to catalog_programs_path(@catalog) do
        %span.glyphicon.glyphicon-chevron-left
          Retour vers la page précédente
    .panel-body
      %ul.nav.nav-pills.nav-stacked
        %li
          = link_to program_p_modules_path(@program) do
            = content_tag(:label, "Modules")
            %span.badge.pull-right
              = @program.p_modules.count
        %li
          = link_to program_courses_path(@program) do
            = content_tag(:label, "Cours")
            %span.badge.pull-right
              = @program.courses.count