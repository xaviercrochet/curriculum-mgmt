.col-md-8.col-md-offset-2
  %h3
    .text-center
      Programmes de cours des étudiants
  .panel.panel-default
    .panel-heading.text-center
      = link_to 'Nouveau Programme', new_user_student_program_path(current_user), class: "btn btn-primary btn-lg btn-block"
    .panel-body
      %table.table.table-bordered
        %thead
        %tbody
          -@student_programs.each do |p|
            %tr
              %td.text-center
                = link_to "Plus d'informations", p, class: "btn btn-primary btn-block"
              %td
                = link_to p.comment, class: "btn btn-primary btn-block" do
                  Discussion
                  %span.badge
                    = p.comment.answers.unread.count
                  

                
              %td= link_to "Supprimer", p, method: :delete, data: {confirm: "Êtes vous sûr?"}, class: "btn btn-primary btn-block"
