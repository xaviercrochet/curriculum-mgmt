.panel.panel-default
  .panel-heading
    .text-center
      %a{"data-parent" => "#accordion", "data-toggle" => "collapse", :href => "#mandatory_"+id.to_s}
        Obligatoires
  .panel-collapse.collapse{:id => "mandatory_"+id}
    .panel-body
      - semester.courses.each do |course|
        - if course.mandatory?
          = render 'years/new/course', f: f, course: course, checked: true
      - if id.eql? "first"
        - semester.year.student_program.first_semester_available_courses.each do |course|
          - if course.mandatory?
            = render 'years/new/course', f: f, course: course, checked: false
      - else
        - semester.year.student_program.second_semester_available_courses.each do |course|
          - if course.mandatory?
            = render 'years/new/course', f: f, course: course, checked: false
