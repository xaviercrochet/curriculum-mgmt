%tr
  %td.text-center
    = i
  %td
    %strong
      Le corequis (XOR) du cours
      = exception.entity.course.name
      n'est pas valide
      %br/
    = render 'courses', courses: exception.entity.courses, type: "Corequis disjonctif exclusif (XOR)", student_program: student_program
  %td.text-center
    - if exception.message.nil? or exception.message.eql? ""
      %span.label.label-danger
        AUCUNE
    - else
      = simple_format(exception.message)