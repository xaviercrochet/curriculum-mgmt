.col-md-8.col-md-offset-2
	%h3
		.text-center	Nouveau catalogue de cours
	.panel.panel-default
		.panel-body
			.form-horizontal
				= form_for @catalog do |f|
					.form-group
						.col-md-3
							= f.label :faculté, class: 'control-label'
						.col-md-9
							= f.text_field :faculty, class: 'form-control'
					.form-group
						.col-md-3
							= f.label :departement, class: 'control-label'
						.col-md-9
							= f.text_field :department, class: 'form-control'
					.form-group
						.col-md-3
							= f.label "Graphe", class: 'control-label'
						.col-md-9
							= f.file_field :graph
							%p.help-block{:style => 'color: red;'} Le fichier de graphe doit être au format .graphml
					%p
						= f.submit "Créer le catalogue", class:"btn btn-primary btn-lg btn-block"
