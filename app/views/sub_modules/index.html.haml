.col-md-8.col-md-offset-2
	%h2.text-center
		Sous-Modules
	.panel.panel-default
		.panel-heading.text-center
			= link_to @p_module do
				%span.glyphicon.glyphicon-chevron-left
				Retour vers la page précédente
		.panel-body
			%table.table.table-bordered
				%thead
					%tr
						%th.text-center NOM
						%th 
				%tbody
					- @sub_modules.each do |p|
						%tr
							%td= link_to p.name, p, class: "btn btn-primary btn-block"
							%td= link_to 'Delete',  sub_module_path(@p_module, p), method: :delete, data:{confirm: 'Are you sure?'}, class: "btn btn-primary btn-block" 
